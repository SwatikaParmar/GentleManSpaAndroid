<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_5sdp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfessional"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/circular50" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProfessionalName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:includeFontPadding="false"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textAlignment="center"
            app:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@+id/ivProfessional"
            app:layout_constraintEnd_toEndOf="@+id/ivProfessional"
            app:layout_constraintStart_toStartOf="@+id/ivProfessional"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>