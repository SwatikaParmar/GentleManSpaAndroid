<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/llMessageReceiver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/msgReceiverCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="#fff"
                app:cardElevation="4dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvReceiverMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:text="@string/receiver_messages_here"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="RtlSymmetry" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvReceiverTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins"
            android:text="@string/time"
            android:textSize="@dimen/_9ssp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/llMessageReceiver"
            app:layout_constraintTop_toBottomOf="@id/llMessageReceiver"
            />

        <LinearLayout
            android:id="@+id/llMessageSender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReceiverTime">

            <androidx.cardview.widget.CardView
                android:id="@+id/msgSenderCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                app:cardBackgroundColor="@color/app_color"
                app:cardElevation="4dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvSenderMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@string/sender_messages_here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="RtlSymmetry,TextSizeCheck" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSenderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_4sdp"
            android:fontFamily="@font/poppins"
            android:text="@string/time"
            android:textColor="@color/white"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llMessageSender"
            tools:ignore="TextContrastCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
