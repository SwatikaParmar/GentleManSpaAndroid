<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:clickToClose="true"
            app:drag_edge="right"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/rowBG"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMoveProgress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:background="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="@color/app_color"
                    app:strokeWidth="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_white"
                        android:padding="@dimen/_7sdp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivService"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/no_product"
                            app:strokeColor="@color/white"
                            app:strokeWidth="@dimen/_1sdp"
                            android:scaleType="fitXY"
                            app:shapeAppearance="@style/CornerCut10"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvServiceName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Face and Body Bleach Services"
                            android:textColor="@color/light_black_item"
                            android:textSize="@dimen/_12ssp"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:fontFamily="@font/poppins_semibold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ivService"
                            app:layout_constraintEnd_toEndOf="parent"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/light_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/_10ssp"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
                            app:layout_constraintStart_toEndOf="@+id/ivService"
                            app:layout_constraintEnd_toEndOf="parent"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvRupees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$60"
                            android:textColor="@color/light_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/_12ssp"
                            android:includeFontPadding="false"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
                            app:layout_constraintStart_toEndOf="@+id/ivService"
                            app:layout_constraintEnd_toStartOf="@+id/tvLessRupees"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLessRupees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$70"
                            android:textColor="@color/app_color"
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_11ssp"
                            android:includeFontPadding="false"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
                            app:layout_constraintStart_toEndOf="@+id/tvRupees" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/light_grey"
                            app:layout_constraintStart_toStartOf="@+id/tvLessRupees"
                            app:layout_constraintEnd_toEndOf="@id/tvLessRupees"
                            app:layout_constraintTop_toTopOf="@id/tvLessRupees"
                            app:layout_constraintBottom_toBottomOf="@id/tvLessRupees"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvInStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Stock: 20"
                            android:textColor="@color/light_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/_10ssp"
                            android:includeFontPadding="false"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            app:layout_constraintTop_toBottomOf="@+id/tvRupees"
                            app:layout_constraintStart_toEndOf="@+id/ivService"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivUpdateProduct"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/user_edit"
                            android:tint="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.daimajia.swipe.SwipeLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>






</layout>