<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_bg"
        tools:context="ui.customerDashboard.fragment.editAddress.EditAddressFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivArrowBack"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:onClick="@{onClick}"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/add_address"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:id="@+id/svRegister"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/clHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/verticalG1"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.03" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/verticalG2"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.97" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/locationNameImageCL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/verticalG1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/verticalG2"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardLocationImageView"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical"
                        android:outlineSpotShadowColor="@color/black"
                        android:elevation="@dimen/_2sdp"
                        app:cardElevation="2dp"
                        tools:targetApi="p">


                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:layout_margin="@dimen/_2sdp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/black"
                            tools:ignore="ContentDescription" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/AddressText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintStart_toEndOf="@+id/cardLocationImageView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/saveAddressAs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="@string/save_address_as"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@id/verticalG2"
                    app:layout_constraintStart_toStartOf="@id/verticalG1"
                    app:layout_constraintTop_toBottomOf="@id/locationNameImageCL"
                    tools:ignore="TextSizeCheck" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btns_CL"
                    android:layout_width="0dp"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/saveAddressAs"
                    app:layout_constraintStart_toStartOf="@id/verticalG1"
                    app:layout_constraintEnd_toEndOf="@id/verticalG2">

                    <LinearLayout
                        android:id="@+id/llHomeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/work_mode_unselected_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingStart="@dimen/_25sdp"
                        android:onClick="@{onClick}"
                        android:paddingEnd="@dimen/_25sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="@string/home"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llWorkBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/work_mode_unselected_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/llHomeBtn"
                        app:layout_constraintEnd_toStartOf="@+id/llOtherBtn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingStart="@dimen/_25sdp"
                        android:onClick="@{onClick}"
                        android:paddingEnd="@dimen/_25sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="@string/work"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOtherBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/work_mode_unselected_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingStart="@dimen/_25sdp"
                        android:paddingEnd="@dimen/_25sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:onClick="@{onClick}"
                        android:paddingBottom="@dimen/_7sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="@string/other"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/enterAddressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/edit_complete_address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="@id/verticalG1"
                    app:layout_constraintTop_toBottomOf="@+id/btns_CL"
                    tools:ignore="TextSizeCheck" />

                <EditText
                    android:id="@+id/etReceiverName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_edit_text"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/receivers_name"
                    android:inputType="text|textCapSentences"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="12sp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/verticalG1"
                    app:layout_constraintRight_toLeftOf="@+id/verticalG2"
                    app:layout_constraintTop_toBottomOf="@+id/enterAddressTxt"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/etReceiverPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_edit_text"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/receivers_phone_no"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:padding="12sp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/verticalG1"
                    app:layout_constraintRight_toLeftOf="@+id/verticalG2"
                    app:layout_constraintTop_toBottomOf="@+id/etReceiverName"
                    tools:ignore="Autofill,TextFields" />

                <EditText
                    android:id="@+id/etHouseNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_edit_text"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapSentences"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/enter_house_flat_block_no"
                    android:maxLines="1"
                    android:padding="12sp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/verticalG1"
                    app:layout_constraintRight_toLeftOf="@+id/verticalG2"
                    app:layout_constraintTop_toBottomOf="@+id/etReceiverPhone"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/etStreetAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_edit_text"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/street_address"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|textCapSentences"
                    android:maxLines="1"
                    android:padding="12sp"
                    android:textColor="@color/black"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toRightOf="@+id/verticalG1"
                    app:layout_constraintRight_toLeftOf="@+id/verticalG2"
                    app:layout_constraintTop_toBottomOf="@+id/etHouseNo"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/etNearbyLandmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_edit_text"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:fontFamily="@font/poppins"
                    android:hint="Nearby Landmark"
                    android:inputType="textPersonName|textCapSentences"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:padding="12sp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/verticalG1"
                    app:layout_constraintRight_toLeftOf="@+id/verticalG2"
                    app:layout_constraintTop_toBottomOf="@+id/etStreetAddress"
                    tools:ignore="Autofill,HardcodedText" />

                <EditText
                    android:id="@+id/etPinCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_edit_text"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/poppins"
                    android:hint="Pin Code"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="12sp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/verticalG1"
                    app:layout_constraintRight_toLeftOf="@+id/verticalG2"
                    app:layout_constraintTop_toBottomOf="@+id/etNearbyLandmark"
                    tools:ignore="Autofill,HardcodedText" />

                <EditText
                    android:id="@+id/etAltPhoneNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_edit_text"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/poppins"
                    android:hint="Alternate Phone No"
                    android:focusable="true"
                    android:imeOptions="actionDone"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:padding="12sp"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/verticalG1"
                    app:layout_constraintRight_toLeftOf="@+id/verticalG2"
                    app:layout_constraintTop_toBottomOf="@+id/etPinCode"
                    tools:ignore="Autofill,HardcodedText,TextFields" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddOrUpdateAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:elevation="@dimen/_2sdp"
                    android:padding="12sp"
                    android:textAllCaps="false"
                    android:onClick="@{onClick}"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:text="Update"
                    app:cornerRadius="@dimen/_45sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etAltPhoneNo"
                    tools:ignore="HardcodedText" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>