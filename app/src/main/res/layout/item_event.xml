<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/app_color"
        app:strokeWidth="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_white"
            android:padding="@dimen/_7sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivEvent"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/no_product"
                app:strokeColor="@color/white"
                app:strokeWidth="@dimen/_1sdp"
                android:scaleType="fitXY"
                app:shapeAppearance="@style/CornerCut10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEventName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Face and Body Bleach Services"
                android:textColor="@color/light_black_item"
                android:textSize="@dimen/_13ssp"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivEvent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sept"
                android:textColor="@color/light_grey"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventName"
                app:layout_constraintStart_toEndOf="@+id/ivEvent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India"
                android:textColor="@color/light_grey"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_11ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvEventDate"
                app:layout_constraintStart_toEndOf="@+id/ivEvent"
                />









        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>