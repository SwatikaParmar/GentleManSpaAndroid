<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_bg">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivOtp"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/app_logo"
                android:layout_marginTop="@dimen/_50sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNewAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/app_color"
                android:gravity="center"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivOtp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:padding="@dimen/_8sdp"
                android:hint="@string/email"
                android:singleLine="true"
                android:elevation="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvNewAccount"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:background="@drawable/bg_edit_text"
                app:layout_constraintTop_toBottomOf="@id/etEmail">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPassword"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:hint="Password"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginStart="0dp"
                    android:background="@null"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:imeOptions="actionNext"
                    android:fontFamily="@font/poppins"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivTogglePassword"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTogglePassword"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/hide_password"
                    android:onClick="@{onClick}"
                    app:tint="@color/icon_color"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:elevation="@dimen/_3sdp"
                android:background="@drawable/bg_edit_text"
                app:layout_constraintTop_toBottomOf="@id/clPassword">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:hint="Confirm Password"
                    android:layout_marginStart="0dp"
                    android:padding="@dimen/_8sdp"
                    android:background="@null"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:includeFontPadding="false"
                    android:imeOptions="actionDone"
                    android:fontFamily="@font/poppins"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivToggleConfirmPassword"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivToggleConfirmPassword"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/hide_password"
                    android:onClick="@{onClick}"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:tint="@color/icon_color"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_13ssp"
                android:onClick="@{onClick}"
                app:cornerRadius="@dimen/_20sdp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@+id/clConfirmPassword"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>