<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivArrowBack"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Create Schedule"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/clHeader"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:background="@drawable/bg_right_corner"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tvMonday">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:background="@color/light_green">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clStartTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/clEndTime">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvStartTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="START TIME"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"
                                    android:fontFamily="@font/poppins"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/clStartTimeValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/tvStartTime"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent">


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvStartHour"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00"
                                        android:gravity="center"
                                        android:background="@drawable/bg_circle_white"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toStartOf="@id/tvStartColon"
                                        app:layout_constraintTop_toTopOf="parent"
                                        />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvStartColon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=":"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toEndOf="@+id/tvStartHour"
                                        app:layout_constraintEnd_toStartOf="@+id/tvStartMin"
                                        app:layout_constraintTop_toTopOf="@+id/tvStartHour"
                                        app:layout_constraintBottom_toBottomOf="@+id/tvStartHour"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvStartMin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00"
                                        android:gravity="center"
                                        android:background="@drawable/bg_circle_white"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:layout_marginStart="@dimen/_2sdp"
                                        app:layout_constraintStart_toEndOf="@+id/tvStartColon"
                                        app:layout_constraintEnd_toStartOf="@+id/tvStartAm"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvStartAm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="AM"
                                        android:gravity="center"
                                        android:background="@drawable/bg_circle_white"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:layout_marginStart="@dimen/_7sdp"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toEndOf="@+id/tvStartMin"
                                        app:layout_constraintTop_toTopOf="parent"/>


                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clEndTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/clStartTime"
                                app:layout_constraintEnd_toEndOf="parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvEndTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="END TIME"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"
                                    android:fontFamily="@font/poppins"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/clEndTimeValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/tvEndTime"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent">


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvEndHour"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00"
                                        android:gravity="center"
                                        android:background="@drawable/bg_circle_white"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toStartOf="@id/tvEndColon"

                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvEndColon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=":"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toEndOf="@+id/tvEndHour"
                                        app:layout_constraintEnd_toStartOf="@+id/tvEndMin"
                                        app:layout_constraintTop_toTopOf="@+id/tvEndHour"
                                        app:layout_constraintBottom_toBottomOf="@+id/tvEndHour"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvEndMin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00"
                                        android:gravity="center"
                                        android:background="@drawable/bg_circle_white"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:layout_marginStart="@dimen/_2sdp"
                                        app:layout_constraintStart_toEndOf="@+id/tvEndColon"
                                        app:layout_constraintEnd_toStartOf="@+id/tvEndAm"
                                        app:layout_constraintTop_toTopOf="parent"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvEndAm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="AM"
                                        android:gravity="center"
                                        android:background="@drawable/bg_circle_white"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:layout_marginStart="@dimen/_7sdp"
                                        android:fontFamily="@font/poppins_medium"
                                        app:layout_constraintStart_toEndOf="@+id/tvEndMin"
                                        app:layout_constraintTop_toTopOf="parent"/>


                                </androidx.constraintlayout.widget.ConstraintLayout>




                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>



                    </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@+id/cvTime">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:background="@color/light_green">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNoteValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change schedule will not effect your confirmed appointments."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/poppins"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@+id/tvNote"
                        app:layout_constraintStart_toStartOf="parent"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create"
                        android:textSize="@dimen/_12ssp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        app:cornerRadius="@dimen/_20sdp"
                        android:paddingHorizontal="@dimen/_60sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>